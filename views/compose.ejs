<!DOCTYPE html>
<html lang="vi">
  <head>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Compose Email</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: Arial, sans-serif;
      }
      .container {
        display: flex;
        flex-direction: column;
        height: 100vh;
      }
      .header {
        color: #fff;
        text-align: center;
        margin-bottom: 30px;
      }
      .content {
        display: flex;
        flex: 1;
      }
      .sider {
        display: flex;
        flex-direction: column;
        width: 250px;
        background-color: #95dcfd;
        padding: 20px;
      }
      .main {
        flex: 1;
        padding: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <div class="inbox-page_action">
          <a href="/compose">Compose Email</a>
          <a href="/logout">Đăng xuất</a>
        </div>
      </div>
      <div class="content">
        <div class="sider">
          <div
            style="margin-top: 20px; background-color: #82d6fd; padding: 10px"
          >
            <h2>Sider</h2>
            <ul>
              <li><a style="display: inline" href="/compose">compose</a></li>
              <li><a style="display: inline" href="/inbox">inbox</a></li>
              <li><a style="display: inline" href="/sent">outbox</a></li>
            </ul>
          </div>
        </div>
        <div class="main">
          <div class="compose-page">
            <div class="compose-page_container">
              <h2 class="compose-page_title">Compose Email</h2>
              <% if (message) { %>
              <p class="compose-page_message"><%= message %></p>
              <% } %>
              <form action="/compose" method="POST">
                <label
                  style="
                    display: block;
                    margin-bottom: 0.5rem;
                    font-weight: bold;
                    color: #333;
                  "
                  >Receiver:</label
                >
                <select name="receiverId" required>
                  <% users.forEach(user => { %>
                  <option value="<%= user.id %>"><%= user.email %></option>
                  <% }) %>
                </select>
                <label
                  style="
                    display: block;
                    margin-bottom: 0.5rem;
                    font-weight: bold;
                    color: #333;
                  "
                  >Topic:</label
                >
                <input type="text" name="subject" required />
                <label
                  style="
                    display: block;
                    margin-bottom: 0.5rem;
                    font-weight: bold;
                    color: #333;
                  "
                  >Content:</label
                >
                <textarea name="body" required></textarea>
                <button type="submit">Send</button>
              </form>
              <p><a href="/inbox">Return to Inbox</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
